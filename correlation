#include <stdio.h>
void main()
{
    int n,i;
    printf("enter no of observations:\n");
    scanf("%d",&n);
    float a[n],b[n];
    printf("enter elements of first set:\n");
    for(i=0;i<n;i++)
    scanf("%f",&a[i]);
    printf("enter elements of second set:\n");
    for(i=0;i<n;i++)
    scanf("%f",&b[i]);
    int xy=0,x=0,y=0,x2=0,y2=0;
    for(i=0;i<n;i++)
    {
        xy+=(a[i]*b[i]);
        x+=a[i];
        y+=b[i];
        x2+=(a[i]*a[i]);
        y2+=(b[i]*b[i]);
    }
    int cov=(xy/n)-(xy/(n*n));
    int sigmax=(x2/n)-((x*x)/(n*n));
    int sigmay=(y2/n)-((y*y)/(n*n));
    int correlation_coefficient=(cov)/(sigmax*sigmay);
    printf("given data is:\n");
    for(i=0;i<n;i++)
    printf("%f  %f\n",a[i],b[i]);
    printf("correlation of given data is: %d\n",correlation_coefficient);
    if(correlation_coefficient<0)
    printf("given data is negatively correlated");
    else
    printf("given data is positively correlated");
    /*50 51 52 53 54
    3.1 3.2 3.3 3.4 3.5*/
}
